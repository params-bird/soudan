.mobile-body
  =render 'shared/header'
  .mobile-body__inner__fixed
    .registration-box
      -# .ragistration-box__header
      -# .space-5
      .label-box
        -# .space-y-sm2
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .label-box__inner
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", class:"input-default"
          -# .space-2
          .label-box__inner
            = f.label :password
            %br/
            = f.password_field :password, autocomplete: "current-password", class:"input-default"
          - if devise_mapping.rememberable?
            -# .space-2
            .label-box__inner
              = f.check_box :remember_me
              = f.label :remember_me
            .label-box__inner
              = f.submit "ログイン", class:"register-btn"
        .sns-select-signin
          -# %p.or SNSでログイン
          .sns-select-signin__google
            .sns-select-signin__google_logo
            %a{href: user_google_oauth2_omniauth_authorize_path}Google
          .sns-select-signin__line
            .sns-select-signin__line_logo
            %a{href: user_line_omniauth_authorize_path}LINE
          .login-other-info
            %a{href: new_user_registration_path}アカウント登録
          .login-other-info
            %a{href: new_user_password_path}パスワードを忘れましたか?
          .login-other-info
            = link_to '戻る', root_path