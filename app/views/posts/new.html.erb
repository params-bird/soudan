<h2>作品投稿</h2>

<%= form_for(@posts) do |f| %>

  <div class="field">
    <%= f.label "作品名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "ジャンル" %><br />
    <%= f.collection_select :category_id, @category, :id, :name, {prompt: "---"}%>
  </div>

  <div class="field">
    <%= f.label "作品画像" %><br />
    <%= f.file_field :image, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "作品紹介" %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "投稿" %>
  </div>
<% end %>