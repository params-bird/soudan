%h2 作品投稿
= form_for @product do |f|
  .field
    = f.label "作品名"
    %br/
    = f.text_field :name, autofocus: true, autocomplete: "off"
  .field
    = f.label "ジャンル"
    %br/
    = f.collection_select :category_id, @category, :id, :name, {prompt: "---"}
  .field
    = f.label "作品画像"
    %br/
    = f.fields_for :images do |image|
      = image.file_field :image_path, multipart: :true
  .field
    = f.label "作品紹介"
    %br/
    = f.text_area :introduction, autofocus: true, autocomplete: "off"
  .actions
    = f.submit "投稿"
