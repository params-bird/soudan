<h1>投稿詳細ページ</h1>
<h3><%= @product.name %></h3>
<h3><%=  %></h3>
<h3>いいね件数: <%= @product.likes.count %></h3>
<% if current_user.already_liked?(@product) %>
  <%= button_to 'いいねを取り消す', product_like_path(@product), method: :delete %>
<% else %>
  <%= button_to 'いいね', product_likes_path(@product) %>
<% end %>
<h2>いいねしたユーザー</h2>
<% @product.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<%= link_to "ホームへ戻る", products_path %>